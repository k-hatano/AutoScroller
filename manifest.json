{
	"manifest_version": 2,
	"name": "AutoScroller",
	"version": "1.0",
	"description": "AutoScroller",

     "background": {
          "scripts": ["background.js"]
     },
	"icons": {
		"16": "autoscroller_16.png",
		"32": "autoscroller_32.png"
		},
		"browser_action": {
			"default_icon": "autoscroller_19.png",
			"default_title": "AutoScroller",
			"default_popup": "popup.html"
			},
			"content_scripts": [
			{
				"matches": ["http://*/*", "https://*/*"],
				"js": ["content.js"],
				"run_at":"document_end"
			}
			],
			"permissions": [
			"windows",
			"tabs",
			"http://*/*",
			"https://*/*",
			"notifications",
			"contextMenus"
			]
		}